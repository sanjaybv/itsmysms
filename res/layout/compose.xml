<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvdTo"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="To" />

        <AutoCompleteTextView
            android:id="@+id/actvTo"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvdTo"
            android:completionThreshold="1"
            android:ems="10" >

            <requestFocus />
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/tvdKey"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/actvTo"
            android:layout_marginTop="10dp"
            android:text="Key" />

        <EditText
            android:id="@+id/etKey"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvdKey"
            android:ems="10" />

        <TextView
            android:id="@+id/tvdBody"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etKey"
            android:layout_marginTop="10dp"
            android:text="Body" />

        <LinearLayout
            android:id="@+id/llView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvdBody"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <EditText
                android:id="@+id/etNewBody"
                style="@style/BlueText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/bSend"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="#447be1"
                android:text="Send"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>